/**index.wxss**/
.slider{
  width: 650rpx;
  margin: 40rpx auto;
  
}
/* 让滑块的选择颜色变为渐变色 */
wx-slider .wx-slider-track  {
  background: linear-gradient(to right, #eccb5d 0%, #ec64d5 50%, #ec290b 100%);
}

.mission-head{
  text-align: center;
  margin:50rpx auto;
  
}
.mission-head .mission-title{
  font-size: 35rpx;
  height: 60rpx;
  line-height: 70rpx;
  margin-bottom: 10rpx;
  
}
.mission-head .mission-text{
  font-size: 30rpx;
  height:50rpx;
  line-height: 50rpx;
  color: silver;
}



.mission-main{
  display: flex;
  width: 660rpx;
  flex-wrap: wrap;
  margin: 100rpx auto;
}
.mission-main .mission-cate{
   width: 220rpx;
   height: 130rpx;
   text-align: center;
   margin-bottom: 60rpx;

}

.mission-main .mission-cate .cate-icon{
  height: 70rpx;
}
.mission-main .mission-cate .cate-icon image{
  width: 48rpx;
  height: 48rpx;
  
}
.mission-main .mission-cate .cate-text{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.mission-main .mission-cate .cate-text-active{
   color:#e7624f ;
}

.btn{
   width: 280rpx;
   height: 90rpx;
   border: 1rpx solid #e7624f;
   border-radius: 20rpx;
   text-align: center;
   line-height: 90rpx;
   margin:70rpx auto;
   color: #e7624f;
}
.clock{
  overflow: hidden;
  height: 300rpx;
  background: #e7624f;
}

.clock-main{
   width: 400rpx;
   height: 400rpx;
   /* background-color: orange; */
   margin: 150rpx auto;
   position: relative;
   
}
.clock-bg,.clock-active{
  position: absolute;
  top:0;
  left:0;
  width: 400rpx;
  height: 400rpx;
}
.clock-text{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  position: absolute;
  top: 170rpx;
  left: 130rpx;
  font-size: 35rpx;
}

.clock-btn .back, .clock-btn .pause , .clock-btn .continue,.clock-btn .giveup{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  border: 1rpx solid #ffffff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}
